{% extends 'base.html.twig' %}
{% block title %}Clientes
{% endblock %}
{% block nav %}
	{{ include('navbar/invoicenavbar.html.twig') }}
{% endblock %}
{% block body %}
	<div class="container" id="tableArea">
		<h1>Cliente:
			{{client.name}}</h1>
		<div class="table-responsive text-nowrap">
			<table class="table table-striped">
				<tbody>
					<tr>
						<th>Nombre</th>
						<td>{{ client.name }}</td>
					</tr>
					<tr>
						<th>Direccion</th>
						<td>{{ client.address }}</td>
					</tr>
					<tr>
						<th>DNI</th>
						<td>{{ client.nif }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ client.email }}</td>
					</tr>
					<tr>
						<th>Telefono</th>
						<td>{{ client.telephone }}</td>
					</tr>
					<tr>
						<th>Web</th>
						<td>{{ client.web }}</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="row justify-content-center">
			<div class="col-2">
				<a class="form-control txt text-center mb-4" href="{{ path('client_edit', {'id': client.id}) }}">Editar cliente</a>
			</div>
		</div>
		{# <a class="buttonize" href="{{ path('client_edit', {'id': client.id}) }}">Editar cliente</a> #}
		{{ include('client/_delete_form.html.twig') }}
	</div>
{% endblock %}
