{% extends 'base.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block body %}
    <h1>Listado de clientes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>DNI</th>
                <td>{{ client.nif }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ client.web }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">Regresar al listao de clientes</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">Editar cliente</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
