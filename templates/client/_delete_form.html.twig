<form method="post" action="{{ path('client_delete', {'id': client.id}) }}" onsubmit="return confirm('Esta seguro que desea borrar este cliente?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    
    <button class="form-control txt mt-4"><i class="far fa-trash-alt"></i> Eliminar</button>
</form>
