{% extends 'base.html.twig' %}

{% block stylesheet %}
	{{parent()}}
	<link rel="stylesheet" href="{{ asset('css/invoice.css') }}"/>

{% endblock %}

{% block title %}Listado de presupuestos
{% endblock %}

{% block nav %}
	{{ include('navbar/shownavbar.html.twig') }}
{% endblock %}


{% block body %}

	<div class="container" id="tableArea">
		<h1>Listado de presupuestos</h1>
		<table
			id="dtHorizontalExample" class="table table-striped table-sm" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Nº presupuesto</th>
					<th>Fecha</th>
					<th>Contrato</th>
					<th>Pie de página</th>
					<th>Subtotal</th>
					<th>Total</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% for budget in budgets %}
					{# {% if budget.visible %} #}
						<tr>
							<td>{{ budget.invoicenumber}}</td>
							<td>{{ budget.date ? budget.date|date('Y-m-d') : '' }}</td>
							<td>{{ budget.description }}</td>
							<td>{{ budget.footer }}</td>
							<td>{{ budget.subtotal }}</td>
							<td>{{ budget.total }}</td>
							<td>
								<a href="{{ path('invoice_print', {'id': budget.id}) }}"><img src="{{ asset('img/print.png')}}" width="25px"></a>
								<a href="{{ path('invoice_show', {'id': budget.id}) }}">show</a>
								<a href="{{ path('invoice_edit', {'id': budget.id}) }}">edit</a>
							</td>

						</tr>
					{# {% endif %} #}

				{# {% else %}
					<tr>
						<td colspan="8">No se han encontrado resultados</td>
					</tr> #}
				{% endfor %}
			</tbody>
		</table>

	</div>

	<a href="{{ path('budget_new', {'idclient': idclient}) }}">Create new</a>
{% endblock %}