{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet"
		  href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		  integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
		  crossorigin="anonymous" />
	<link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
	<script src="https://kit.fontawesome.com/ec7905829e.js" crossorigin="anonymous"></script>
	<style type="text/css">
        #elementos1 {
            text-align: center;
            border: inset 7px coral;
        }
        #elementos2 {
            text-align: center;
            border: inset 7px skyblue;
        }
        #elementos1 a{
            color: black;
        }
        #elementos2 a{
            color: black;
        }
        #elementos1 a:hover, #elementos1 .btn:hover{
            color: orange;
            background-color: #1c7430;
            transition: all 2s linear;
        }
        #elementos2 a:hover, .btn:hover{
            color: pink;
            background-color: #0000cc;
            transition: all 2s linear;
        }
	</style>
{% endblock %}
{% block title %}Listar Empresa{% endblock %}

{% block nav %}
{{ include('enterprise/shownavbar.html.twig') }}   
{% endblock %} 

{% block body %}
    <h1>Empresa</h1>

    <table class="table table-striped table-light">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Direccion</th>
      <th scope="col">Email</th>
      <th scope="col">Web</th>      
      <th scope="col">NIF</th>
      <th scope="col">Logo</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td>{{ enterprise.name }}</td>
      <td>{{ enterprise.address }}</td>
      <td>{{ enterprise.email }}</td>  
      <td>{{ enterprise.web }}</td>
      <td>{{ enterprise.nif }}</td>
      <td>{{ enterprise.logo }}</td>
    </tr>    
  </tbody>
</table>
<div id="elementos1">
    <button class="btn"><a href="#">Supervisor</a></button>
    <button class="btn"><a href="#">Pie de empresa</a></button>
    <button class="btn"><a href="#">RRSS</a></button>
</div>
<div id="elementos2">
    <button class="btn"><a href="{{ path('enterprise_index') }}">Regresar</a></button>
    <button class="btn"><a href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">Editar</a></button>
	{{ include('enterprise/_delete_form.html.twig') }}
</div>
{% endblock %}
