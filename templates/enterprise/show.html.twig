{% block title %}Empresa{% endblock %}

{% block body %}
    <h1>Empresa</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ enterprise.name }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ enterprise.address }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ enterprise.email }}</td>
            </tr>
            <tr>
                <th>Web</th>
                <td>{{ enterprise.web }}</td>
            </tr>
            <tr>
                <th>DNI</th>
                <td>{{ enterprise.nif }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ enterprise.logo }}</td>
            </tr>
