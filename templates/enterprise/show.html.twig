{% extends 'base.html.twig' %}
{% block title %}Empresa
{% endblock %}
{% block nav %}
	{{ include('navbar/shownavbar.html.twig') }}
{% endblock %}
{% block body %}
	<div class="container" id="tableArea">


		<div class="row">
			<div class="col-6">
				<h1>Empresa</h1>
			</div>
			<div class="col-6">
				{{ include('enterprise/_delete_form.html.twig') }}
				<a title="Editar" class="buttonize float-right" href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">
					<i class="far fa-edit"></i>
					Editar</a>
				{# <a class="buttonize float-right" href="{{ path('budget_view', {'identerprise': enterprise.id}) }}">Presupuestos</a> #}
			</div>
		</div>
		<div class="row">
			<div class="col-12 h6">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped table-light">
						<thead>
							<tr>
								<th scope="col">Nombre</th>
								<th scope="col">Direccion</th>
								<th scope="col">Telefono</th>
								<th scope="col">Email</th>
								<th scope="col">Web</th>
								<th scope="col">NIF</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>{{ enterprise.name }}</td>
								<td>{{ enterprise.address }}</td>
								<td>{{ enterprise.telephone }}</td>
								<td>{{ enterprise.email }}</td>
								<td>{{ enterprise.web }}</td>
								<td>{{ enterprise.nif }}</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>

		</div>
		<div class="row">
			<div class="col-12 h6">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped  table-light">
						<thead>
							<tr>
								<th>Responsables de empresa</th>
								<th class="align-right float-right">
									<a title="Añadir" class="buttonize" href="{{ path('supervisor_index', {identerprise: enterprise.id} ) }}">
										<i class="fas fa-plus"></i>
									</a>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>
									{% for supervisor in supervisors %}
										<div>
											{% if supervisor.visible %}
												{{ supervisor}}
											{% endif %}
										</div>
									{% endfor %}
								</td>
								<td></td>

							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 h6">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped table-light">
						<thead>
							<tr>
								<th>Pie de empresa</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td style="font-size: 10px">Para editar, ir a empresa</td>
							</tr>
							<tr>
								<td>
									<div class="col-md-12">
										<a href="#">{{enterprise.footer}}</a>
									</div>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 h6">
				<div class="table-responsive text-nowrap">
					<table class="table table-striped table-light">
						<thead>
							<tr>
								<th>Redes Sociales</th>
								<th class="align-right float-right">
									<a title="Añadir red social" class="buttonize" href="{{ path('social_network_new', {identerprise: enterprise.id} ) }}">
										<i class="fas fa-plus"></i>
									</a>
								</th>
							</tr>
						</thead>
						<tbody>
							{% for socialnetwork in enterprise.socialnetwork %}
								{% if socialnetwork.visible %}
									<tr>
										<td>
											{{socialnetwork.network }}:
											{{socialnetwork}}
											-
											<a class="buttonize" href="{{ path('social_network_edit', {id: socialnetwork.id}) }}">Editar</a>
										</td>
										<td></td>
									</tr>
								{% endif %}
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-2">
				<a class="form-control txt text-center mb-4" href="{{ path('enterprise_index') }}">Volver al listado</a>
			</div>
		</div>
	{% endblock %}
