{% extends 'base.html.twig' %}

{% block title %}Enterprise index{% endblock %}

{% block body %}
    <h1>Enterprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Web</th>
                <th>Nif</th>
                <th>Logo</th>
                <th>Footer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enterprise in enterprises %}
            <tr>
                <td>{{ enterprise.id }}</td>
                <td>{{ enterprise.name }}</td>
                <td>{{ enterprise.address }}</td>
                <td>{{ enterprise.email }}</td>
                <td>{{ enterprise.web }}</td>
                <td>{{ enterprise.nif }}</td>
                <td>{{ enterprise.logo }}</td>
                <td>{{ enterprise.footer }}</td>
                <td>
                    <a href="{{ path('enterprise_show', {'id': enterprise.id}) }}">show</a>
                    <a href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enterprise_new') }}">Create new</a>
{% endblock %}
