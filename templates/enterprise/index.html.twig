{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <script src="https://kit.fontawesome.com/ec7905829e.js" crossorigin="anonymous"></script>
    <style type="text/css">
        form{
            margin:20px;
            padding: 10px;
            background-color: chocolate;
            box-shadow: 0 0 15px #374dbc;
            border: 5px solid purple;
            align: center;
        }
        input{
            align-content: center;
            margin-left: 4px;
            background-color: #1d2124;
            color: yellow;
            box-shadow: 0 0 15px orange;
            border: 3px solid pink;
            align: center;
        }
        input:focus{
            background-color: yellow;
            color: black;
            box-shadow: 0 0 15px pink;
            border: 3px solid orange;
            transition: all 1s linear;
        }
        h1{
            color:orange;
            text-align: center;
        }
        a{
            color:black;
            text-align: center;
        }
        #elementos1 {
            text-align: center;
            border: inset 7px coral;
        }
        #elementos2 {
            text-align: center;
            border: inset 7px skyblue;
        }
        #elementos1 a{
            color: black;
        }
        #elementos2 a{
            color: black;
        }
        #elementos1 a:hover, #elementos1 .btn:hover{
            color: orange;
            background-color: #1c7430;
            transition: all 2s linear;
        }
        #elementos2 a:hover, .btn:hover{
            color: pink;
            background-color: #0000cc;
            transition: all 2s linear;
        }
    </style>
{% endblock %}

{% block title %}Listado de empresas
{% endblock %}

{% block nav %}
	{{ include('enterprise/simplenavbar.html.twig') }}
{% endblock %}

{% block body %}
    <h1>Listado de empresas</h1>
<div class ="container">
    <table class="table table-striped table-light">

        <thead>
            <tr>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>E-mail</th>
                <th>Web</th>
                <th>DNI</th>
                <th>Logo</th>
                <th>Pie de pag</th>
            </tr>
        </thead>
        <tbody>
        {% for enterprise in enterprises %}
            <tr>
                <td>{{ enterprise.name }}</td>
                <td>{{ enterprise.address }}</td>
                <td>{{ enterprise.email }}</td>
                <td>{{ enterprise.web }}</td>
                <td>{{ enterprise.nif }}</td>
                <td>{{ enterprise.logo }}</td>
                <td>{{ enterprise.footer }}</td>
                <td>
                    <a href="{{ path('enterprise_show', {'id': enterprise.id}) }}">Mostrar</a>
                    <a href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No se han encontrado registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
  
{% endblock %}
