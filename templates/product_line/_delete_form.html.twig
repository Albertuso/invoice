<form method="post" action="{{ path('product_line_delete', {'id': product_line.id}) }}" onsubmit="return confirm('Esta seguro que desea borrar esta linea?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product_line.id) }}">
    <button class="btn">Borrar</button>
</form>
