          {% for rol in listuser.roles %}
            {% if rol == 'ROLE_USER' %}
              {# aqui menu admin #}





              {{ listuser.username }} - max empresas = {{ listuser.max }}
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% else %}
        {# ... o un usuario #} 
        <p>
            <a href="{{path('enterprise_new')}}">AÃ±adir empresa</a>
        </p>
        

        {% for enterprise in user.enterprises %}
