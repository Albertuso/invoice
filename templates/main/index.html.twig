{% extends 'base.html.twig' %}

{% block title %}
  Hello MainController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; }
  </style>

  <div class="example-wrapper">
    {% set admin = false %}
    {% if user.roles is defined %}
      {% for rol in user.roles %}
        {% if rol == 'ROLE_ADMIN' %}
          {% set admin = true %}
        {% endif %}
      {% endfor %}
      {% if admin == true %}
        {# verificamos si es un administrador.... #}
        {% for listuser in users %}
          {% for rol in listuser.roles %}
            {% if rol == 'ROLE_USER' %}
              {# aqui menu admin #}
              {{ listuser.username }} - max empresas = {{ listuser.max }}
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% else %}
          {{ include('main/user.html.twig') }}
       
      {% endif %}
      {% else %}
          {# no tiene roles #}
          registrate y esas cosas
           <a href="{{path('app_login')}}">registro</a>
    {% endif %}
  </div>
{% endblock %}
