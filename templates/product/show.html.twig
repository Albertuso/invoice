{% extends 'base.html.twig' %}
{% block title %}Producto
{% endblock %}
{% block nav %}
	{{ include('navbar/shownavbar.html.twig') }}
{% endblock %}
{% block body %}
	<div class="container" id="tableArea">
		<h1>Producto</h1>
		<div class="table-responsive text-nowrap">
			<table class="table table-striped">
				<tbody>
					<tr>
						<th>Nombre</th>
						<td>{{ product.name }}</td>
					</tr>
					<tr>
						<th>Precio</th>
						<td>{{ product.price }}</td>
					</tr>
					<tr>
						<th>IVA</th>
						<td>{{ product.vat }}</td>
					</tr>
					<tr>
						<th>Descripcion</th>
						<td>{{ product.description }}</td>
					</tr>
				</tbody>
			</table>
		</div>


				<div class="row justify-content-center">
			<div class="col-2">
				<a class="form-control txt text-center mb-4" href="{{ path('product_edit', {'id': product.id}) }}">Editar</a>
			</div>
		</div>
		{# <a class="buttonize" href="{{ path('product_edit', {'id': product.id}) }}">Editar</a> #}
		{{ include('product/_delete_form.html.twig') }}
	</div>
{% endblock %}
