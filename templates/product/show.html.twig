{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <script src="https://kit.fontawesome.com/ec7905829e.js" crossorigin="anonymous"></script>
    <style type="text/css">
        #elementos1 {
            text-align: center;
            border: inset 7px coral;
        }
        #elementos2 {
            text-align: center;
            border: inset 7px skyblue;
        }
        #elementos1 a{
            color: black;
        }
        #elementos2 a{
            color: black;
        }
        #elementos1 a:hover, #elementos1 .btn:hover{
            color: orange;
            background-color: #1c7430;
            transition: all 2s linear;
        }
        #elementos2 a:hover, .btn:hover{
            color: pink;
            background-color: #0000cc;
            transition: all 2s linear;
        }
    </style>
{% endblock %}
{% block title %}Ver Producto{% endblock %}

{% block body %}
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>IVA</th>
                <td>{{ product.vat }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

<div id="elementos2">
    <button class="btn"><a href="{{ path('product_index') }}">Regresar al listado de productos</a></button>
    <button class="btn"> <a href="{{ path('product_edit', {'id': product.id}) }}">Editar</a></button>
    {{ include('product/_delete_form.html.twig') }}
</div>
{% endblock %}
