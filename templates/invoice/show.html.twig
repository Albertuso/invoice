{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
          integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    <script src="https://kit.fontawesome.com/ec7905829e.js" crossorigin="anonymous"></script>
    <style type="text/css">
        #elementos1 {
            text-align: center;
            border: inset 7px coral;
        }
        #elementos2 {
            text-align: center;
            border: inset 7px skyblue;
        }
        #elementos1 a{
            color: black;
        }
        #elementos2 a{
            color: black;
        }
        #elementos1 a:hover, #elementos1 .btn:hover{
            color: orange;
            background-color: #1c7430;
            transition: all 2s linear;
        }
        #elementos2 a:hover, .btn:hover{
            color: pink;
            background-color: #0000cc;
            transition: all 2s linear;
        }
    </style>
{% endblock %}
{% block title %}Ver Factura{% endblock %}

{% block body %}
    <h1>Invoice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ invoice.id }}</td>
            </tr>
            <tr>
                <th>Invoicenumber</th>
                <td>{{ invoice.invoicenumber }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>Footer</th>
                <td>{{ invoice.footer }}</td>
            </tr>
            <tr>
                <th>Subtotal</th>
                <td>{{ invoice.subtotal }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ invoice.total }}</td>
            </tr>
        </tbody>
    </table>

    {# <a href="{{ path('invoice_index') }}">back to list</a> #}
<div id="elementos2">
    <button class="btn"> <a href="{{ path('invoice_edit', {'id': invoice.id}) }}">Editar</a></button>
    <button class="btn"> <a href="invoiceindex">Regresar</a></button>
    {{ include('invoice/_delete_form.html.twig') }}
</div>
{% endblock %}
