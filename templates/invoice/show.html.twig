{% extends 'base.html.twig' %}

{% block title %}Ver Factura{% endblock %}

{% block body %}
    <h1>Factura</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numero de factura</th>
                <td>{{ invoice.invoicenumber }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>Pie de pag</th>
                <td>{{ invoice.footer }}</td>
            </tr>
            <tr>
                <th>Subtotal</th>
                <td>{{ invoice.subtotal }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ invoice.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('invoice_index') }}">Regresar al listado de facturas</a>

    <a href="{{ path('invoice_edit', {'id': invoice.id}) }}">Editar</a>

    {{ include('invoice/_delete_form.html.twig') }}
{% endblock %}
