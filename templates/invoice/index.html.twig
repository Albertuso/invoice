{% extends 'base.html.twig' %}
{% block stylesheet %}
	{{parent()}}
	<link rel="stylesheet" href="{{ asset('css/invoice.css') }}"/>
{% endblock %}
{% block title %}Listado de facturas
{% endblock %}
{% block nav %}
	{{ include('navbar/shownavbar.html.twig') }}
{% endblock %}
{% block body %}
	<div class="container" id="tableArea">
		<h1>Listado de facturas cliente:
			{{client.name}}</h1>
		<table id="dtHorizontalExample" class="table table-striped table-sm" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>Nº factura</th>
					<th>Fecha</th>
					<th width="400px">Descripción</th>
					<th>Pie de página</th>
					<th>Subtotal</th>
					<th>Total</th>
					<th>acciones</th>
				</tr>
			</thead>
			<tbody>
			{% set sumsubtotal = 0 %}
			{% set sumtotal = 0 %}
				{% for invoice in invoices %}
					{% if invoice.visible %}
						<tr>
							<td>{{ invoice.invoicenumber}}</td>
							<td>{{ invoice.date ? invoice.date|date('Y-m-d') : '' }}</td>
							<td>{{ invoice.description }}</td>
							<td>{{ invoice.footer }}</td>
							<td>{{ invoice.subtotal }}</td>
							<td>{{ invoice.total }}</td>
							<td>
								<a href="{{ path('invoice_print', {'id': invoice.id}) }}"><img src="{{ asset('img/print.png')}}" width="25px"></a>
								<a class="buttonize" class="buttonize" href="{{ path('invoice_show', {'id': invoice.id}) }}">Mostrar</a>
								<a class="buttonize" class="buttonize" href="{{ path('invoice_edit', {'id': invoice.id}) }}">Editar</a>
							</td>
						</tr>
						{% set sumsubtotal = sumsubtotal + invoice.subtotal %}
						{% set sumtotal = sumtotal + invoice.total %}
					{% endif %}
					<tr>
						<td></td>
						<td></td>
						<td></td>
						<td><strong>Total (€)</strong></td>
						<td><strong>{{ sumsubtotal }}</strong></td>
						<td><strong>{{ sumtotal }}</strong></td>
						<td>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">No se han encontrado resultados</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<a href="{{ path('invoice_new', {'idclient': idclient}) }}">Crear nueva</a>
{% endblock %}
