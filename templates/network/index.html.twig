{% extends 'base.html.twig' %}
{% block nav %}
	{{ include('navbar/simplenavbar.html.twig') }}
{% endblock %}
{% block title %}Listado de redes
{% endblock %}
{% block body %}
	<div class="container" id="tableArea">
		<h1>Listado de redes</h1>
		<div class="table-responsive text-nowrap">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for network in networks %}
						{% if network.visible %}
							<tr>
								<td>{{ network.name }}</td>
								<td>
									<a class="buttonize" href="{{ path('network_edit', {'id': network.id, 'identerprise':enterprise.id}) }}">Editar</a>
								</td>
							</tr>
						{% endif %}
					{% else %}
						<tr>
							<td colspan="3">No se han encontrado resultados</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<a class="form-control txt text-center" href="{{ path('network_new', {'identerprise': enterprise.id}) }}">Crear nueva social</a>
		<a class="form-control txt text-center mt-4" href="{{ path('enterprise_show', {'id': enterprise.id}) }}">Regresar a la empresa</a>

	</div>
{% endblock %}
